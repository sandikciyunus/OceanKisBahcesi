@model OceanKisBahcesi.WebUI.Models.AboutListViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_SiteLayout.cshtml";
    var request = Context.Request.QueryString.ToString();
}
<!-- ======= About Us Section ======= -->
<section class="breadcrumbs">
    <div class="container">

        <div class="d-flex justify-content-between align-items-center">
            @if (request == "?language=tr-TR")
            {
                <h2>Hakkımızda</h2>
            }
            @if (request == "?language=en-US")
            {
                <h2>About Us</h2>
            }
            @if (request == "")
            {
                <h2>Hakkımızda</h2>
            }
            <ol>
                @if (request == "?language=tr-TR")
                {
                    <li><a href="index.html">Anasayfa</a></li>
                    <li>Hakkımızda</li>
                }
                @if (request == "?language=en-US")
                {
                    <li><a href="index.html">Home</a></li>
                    <li>About Us</li>
                }
                @if (request == "")
                {
                    <li><a href="index.html">Anasayfa</a></li>
                    <li>Hakkımızda</li>
                }

            </ol>
        </div>

    </div>
</section><!-- End About Us Section -->
<!-- ======= About Section ======= -->
<section class="about" data-aos="fade-up">
    <div class="container">

        <div class="row">
            <div class="col-lg-12 pt-4 pt-lg-0">
                @foreach (var item in Model.Abouts)
                {
                    @if (request == "?language=tr-TR")
                    {
                        <p>HAKKIMIZDA</p>
                    }
                    @if (request == "?language=en-US")
                    {
                        <p>ABOUT US</p>
                    }
                    @if (request == "")
                    {
                        <p>HAKKIMIZDA</p>
                    }
                    <br />
                    <p>@item.AboutDescription</p>
                    <br />
                    @if (request == "?language=tr-TR")
                    {
                        <p>VİZYONUMUZ</p>
                    }
                    @if (request == "?language=en-US")
                    {
                        <p>OUR VISION</p>
                    }
                    @if (request == "")
                    {
                        <p>MİSYONUMUZ</p>
                    }

                    <p>@item.OurVisionDescription</p>
                    <br />

                    @if (request == "?language=tr-TR")
                    {
                        <p>VİZYONUMUZ</p>
                    }
                    @if (request == "?language=en-US")
                    {
                        <p>OUR MISSION</p>
                    }
                    @if (request == "")
                    {
                        <p>MİSYONUMUZ</p>
                    }
                    <p>@item.OurMission</p>
                }

            </div>
        </div>

    </div>
</section><!-- End About Section -->
