@model OceanKisBahcesi.WebUI.Models.SubProductModel
@{
    ViewData["Title"] = "SubProductUpdate";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<form>
    <input type="text" hidden id="id" value="@Model.SubProduct.Id" />
    <div class="form-group">
        <label for="name">Alt Ürün Adı</label>
        <input type="text" class="form-control" id="name" value="@Model.SubProduct.Name" />
    </div>
    <div class="form-group">
        <label>Ürün Seç</label>
        <select id="productId" class="form-control">
            @foreach (var item in Model.Products)
            {
                if (Model.SubProduct.ProductId == item.Id)
                {
                    <option selected value="@item.Id">@item.Name</option>
                }
                else
                {
                    <option value="@item.Id">@item.Name</option>
                }


            }
        </select>
    </div>
    <button type="button" onclick="updateSubProduct()" class="btn btn-success">Güncelle</button>
</form>

@section Scripts{

    <script src="~/Admin/js/SubProductUpdate.js"></script>
}
