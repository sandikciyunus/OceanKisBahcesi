@model OceanKisBahcesi.WebUI.Models.ProductListViewModel
@{
    ViewData["Title"] = "ProductList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<a class="btn btn-info btn-sm" href="/Admin/ProductAdd">Ürün Ekle</a>
<br />
<br />
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Ürün Listesi</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="productTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Ürün Adı</th>
                        <th>Dil</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Products)
                    {
                        <tr>
                            <td>@item.Name</td>
                            <td>@item.Language.Name</td>
                            <td>
                                <a class="btn btn-success btn-sm" href="/Admin/ProductUpdate?id=@item.Id">Güncelle</a>
                                @if (item.SubProducts.Count() == 0)
                                {
                                    <a class="btn btn-warning btn-sm" href="/Admin/ProductDescription?id=@item.Id">Açıklama Ekle</a>
                                    <a href="/Admin/ProductFeature?id=@item.Id" class="btn btn-info btn-sm">Özellik Ekle</a>
                                    @if (item.Language.Name == "tr-TR")
                                    {
                                        <a href="/Admin/ProductImage2D?path=@item.Path&id=@item.Id" class="btn btn-light btn-sm">2D Resim Ekle</a>
                                        <a href="/Admin/ProductImage?path=@item.Path&id=@item.Id" class="btn btn-secondary btn-sm">Resim Ekle</a>
                                        <a class="btn btn-primary btn-sm">Video Ekle</a>
                                    }
                                }


                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
@section Scripts{

    <script src="~/Admin/js/ProductList.js"></script>
}


