@model OceanKisBahcesi.WebUI.Models.SubProductListViewModel
@{
    ViewData["Title"] = "SubProductList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    var language = "";
}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Alt Ürün Listesi</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="subProductTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Alt Ürün Adı</th>
                        <th>Bağlı Olduğu Ürün</th>
                        <th>Dil</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.SubProducts)
                    {

                        //if(item.Language.Name== "tr-TR")
                        //{
                        //    language = "Türkçe";
                        //}
                        //if (item.Language.Name == "en-US")
                        //{
                        //    language = "İngilizce";
                        //        }
                        <tr>
                            <td>@item.Name</td>
                            <td>@item.Product.Name</td>
                            <td>@item.Language.Name</td>
                            <td>
                                <a class="btn btn-success btn-sm">Güncelle</a>
                                <a class="btn btn-warning btn-sm">Açıklama Ekle</a>
                                <a href="/Admin/SubProductFeature?id=@item.Id" class="btn btn-info btn-sm">Özellik Ekle</a>
                                @if (item.Language.Name == "tr-TR")
                                {
                                    <a href="/Admin/SubProductImage?path=@item.Path" class="btn btn-secondary btn-sm">Resim Ekle</a>
                                    <a class="btn btn-primary btn-sm">Video Ekle</a>
                                }

                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
@section Scripts{ 

    <script src="~/Admin/js/SubProductList.js"></script>
}

