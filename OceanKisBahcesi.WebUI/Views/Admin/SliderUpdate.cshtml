@model OceanKisBahcesi.WebUI.Models.SliderViewModel
@{
    ViewData["Title"] = "SliderUpdate";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<form>
    <input type="text" hidden id="id" value="@Model.Slider.Id" />
    <div class="form-group">
        <label for="exampleFormControlFile1">Resim Seç</label>
        <input type="file" accept="image/*" class="form-control-file" id="file">
    </div>
    <div class="form-check">
        @if (Model.Slider.IsActive == 1)
        {
            <input class="form-check-input" type="checkbox" value="1" checked id="IsActive">
            <label class="form-check-label" for="IsActive">
                Aktif
            </label>
        }
        else
        {
            <input class="form-check-input" type="checkbox" value="0"  id="IsActive">
            <label class="form-check-label" for="IsActive">
                Pasif
            </label>
        }

    </div>

    <button type="button" onclick="updateSlider()" class="btn btn-success">Güncelle</button>
</form>

@section Scripts{

    <script src="~/Admin/js/SliderUpdate.js"></script>
}



