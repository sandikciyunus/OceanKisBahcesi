@model OceanKisBahcesi.WebUI.Models.ServiceListViewModel
@{
    ViewData["Title"] = "ServiceList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Servisler</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="sTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Başlık</th>
                        <th>Dil</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Services)
                    {
                        <tr>
                            <td>@item.Title</td>
                            <td>@item.Language.Name</td>
                            <td>
                                <a class="btn btn-success btn-sm" href="/Admin/ServiceUpdate?id=@item.Id">Güncelle</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
@section Scripts{

    <script src="~/Admin/js/ServiceList.js"></script>
}




