@model OceanKisBahcesi.WebUI.Models.ContactListViewModel
@{
    ViewData["Title"] = "ContactList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Adres Listesi</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="contactTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Adres</th>
                        <th>Email</th>
                        <th>Telefon</th>
                        <th>Dil</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.AddressInformations)
                    {
                        <tr>
                            <td>@item.Address</td>
                            <td>@item.Email</td>
                            <td>@item.Phone</td>
                            <td>@item.Language.Name</td>
                            <td>
                                <a href="/Admin/ContactUpdate?id=@item.Id" class="btn btn-success btn-sm">Güncelle</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
@section Scripts{

    <script src="~/Admin/js/ContactList.js"></script>
}


