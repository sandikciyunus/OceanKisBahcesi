@model OceanKisBahcesi.WebUI.Models.ContactViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_SiteLayout.cshtml";
    var request = Context.Request.QueryString.ToString();
    string[] emails = Model.AddressInformations.Email.Split(",").Select(s => s.Trim()).ToArray();
    var nameText = "";
    var phoneText = "";
    var emailText = "";
    var messageText = "";
    var subjectText = "";
    var buttonText = "";
    var formTitle = "";
    if (request == "?language=en-US")
    {
        nameText = "Your Name";
        emailText = "Email";
        phoneText = "Phone";
        messageText = "Message";
        subjectText = "Subject";
        buttonText = "Send Message";
        formTitle = "Contact Us";
    }
    if (request == "?language=tr-TR")
    {
        nameText = "Ad Soyad";
        emailText = "Email";
        phoneText = "Telefon";
        messageText = "Mesaj";
        subjectText = "Konu";
        buttonText = "Mesaj Gönder";
        formTitle = "Bize Ulaşın";
    }
    if (request == "")
    {
        nameText = "Ad Soyad";
        emailText = "Email";
        phoneText = "Telefon";
        messageText = "Mesaj";
        subjectText = "Konu";
        buttonText = "Mesaj Gönder";
        formTitle = "Bize Ulaşın";
    }

}

<!-- ======= Contact Section ======= -->
<section class="breadcrumbs">
    <div class="container">

        @if (request == "?language=en-US")
        {
            <div class="d-flex justify-content-between align-items-center">
                <h2>Contact</h2>
                <ol>
                    <li><a href="/Home/Index?language=en-US">Home</a></li>
                    <li>Contact</li>
                </ol>
            </div>
        }

        @if (request == "?language=tr-TR")
        {
            <div class="d-flex justify-content-between align-items-center">
                <h2>İletişim</h2>
                <ol>
                    <li><a href="/Home/Index?language=tr-TR">Anasayfa</a></li>
                    <li>İletişim</li>
                </ol>
            </div>
        }

        @if (request == "")
        {
            <div class="d-flex justify-content-between align-items-center">
                <h2>İletişim</h2>
                <ol>
                    <li><a href="/Home/Index?language=tr-TR">Anasayfa</a></li>
                    <li>İletişim</li>
                </ol>
            </div>
        }


    </div>
</section><!-- End Contact Section -->
<!-- ======= Contact Section ======= -->
<section class="contact"  style="background-color:aliceblue;" data-aos="fade-up" data-aos-easing="ease-in-out" data-aos-duration="500">
    <div class="container">

        <div class="row">

            <div class="col-lg-6">
                @if (request == "?language=en-US")
                {
                    <div class="row">
                        <div class="col-md-12">
                            <div class="info-box">
                                <i class="bx bx-map"></i>
                                <h3>Our Address</h3>
                                <p>@Model.AddressInformations.Address</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div style="height:190px;" class="info-box">
                                <i class="bx bx-envelope"></i>
                                <h3>Email Us</h3>
                                @for (int i = 0; i < emails.Length; i++)
                                {
                                    <p>@emails[i]</p>
                                }
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div style="height:190px;" class="info-box">
                                <i class="bx bx-phone-call"></i>
                                <h3>Call Us</h3>
                                <p>@Model.AddressInformations.Phone</p>
                            </div>
                        </div>
                    </div>
                }

                @if (request == "?language=tr-TR")
                {
                    <div class="row">
                        <div class="col-md-12">
                            <div class="info-box">
                                <i class="bx bx-map"></i>
                                <h3>Adres</h3>
                                <p>@Model.AddressInformations.Address</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div style="height:190px;" class="info-box">
                                <i class="bx bx-envelope"></i>
                                <h3>Email</h3>
                                @for (int i = 0; i < emails.Length; i++)
                                {
                                    <p>@emails[i]</p>
                                }
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div style="height:190px;" class="info-box">
                                <i class="bx bx-phone-call"></i>
                                <h3>Telefon</h3>
                                <p>@Model.AddressInformations.Phone</p>
                            </div>
                        </div>
                    </div>
                }

                @if (request == "")
                {
                    <div class="row">
                        <div class="col-md-12">
                            <div class="info-box">
                                <i class="bx bx-map"></i>
                                <h3>Adres</h3>
                                <p>@Model.AddressInformations.Address</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div style="height:190px;" class="info-box">
                                <i class="bx bx-envelope"></i>
                                <h3>Email</h3>
                                @for (int i = 0; i < emails.Length; i++)
                                {
                                    <p>@emails[i]</p>
                                }
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div style="height:190px;" class="info-box">
                                <i class="bx bx-phone-call"></i>
                                <h3>Telefon</h3>
                                <p>@Model.AddressInformations.Phone</p>
                            </div>
                        </div>
                    </div>
                }
            </div>


            <div class="col-lg-6">
                <h3>@formTitle</h3>
                <form  method="post" role="form">
                    <div class="row">
                        <div class="col-md-6 form-group">
                            <input type="text" name="name" class="form-control"  id="name" placeholder="@nameText" required>
                        </div>
                        <div class="col-md-6 form-group mt-3 mt-md-0">
                            <input type="email" class="form-control" name="email" id="email" placeholder="@emailText" required>
                        </div>
                    </div>
                    <br />
                    <div class="row">
                        <div class="col-md-6 form-group">
                            <input type="text" class="form-control" name="phone" id="phone" placeholder="@phoneText" required>

                        </div>
                        <div class="col-md-6 form-group mt-3 mt-md-0">
                            <input type="text" class="form-control" name="subject" id="subject" placeholder="@subjectText" required>
                        </div>
                    </div>
                   
                    <div class="form-group mt-3">
                        <textarea class="form-control" name="message" id="message" rows="5" placeholder="@messageText" required></textarea>
                    </div>
                    <br />
                    <div class="text-center"><button type="button" onclick="sendMail()" class="btn btn-success">@buttonText</button></div>
                </form>
            </div>

        </div>

    </div>
</section><!-- End Contact Section -->
<!-- ======= Map Section ======= -->
<section class="map mt-2">
    <div class="container-fluid p-0">
        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3014.537575685787!2d29.15377731571699!3d40.92588403243922!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x14cac4160ce02ddb%3A0x4ed8388e5b0ce428!2sG%C3%BClsuyu%2C%20Kelebek%20Sk.%20No%3A12%2C%2034848%20Maltepe%2F%C4%B0stanbul!5e0!3m2!1str!2str!4v1628693976064!5m2!1str!2str" frameborder="0" style="border:0;" allowfullscreen=""></iframe>
    </div>
</section><!-- End Map Section -->

@section Scripts{
    <script src="~/Site/contact.js"></script>

}